<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:adapters="clr-namespace:UIH.Mcsf.Filming.Adapters;assembly=UIH.Mcsf.Filming.Adapters"
                    xmlns:viewModel="clr-namespace:UIH.Mcsf.Filming.ViewModel;assembly=UIH.Mcsf.Filming.ViewModel"
                    xmlns:view="clr-namespace:UIH.Mcsf.Filming.View;assembly=UIH.Mcsf.Filming.View">
    <DataTemplate DataType="{x:Type viewModel:ViewerControlAdapterViewModel}">
        <adapters:ViewerControlAdapter></adapters:ViewerControlAdapter>
    </DataTemplate> 

    <DataTemplate DataType="{x:Type viewModel:PageControlViewModel}">
        <view:PageControl />
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewModel:CardControlViewModel}">
        <view:CardControl />
    </DataTemplate>
</ResourceDictionary>