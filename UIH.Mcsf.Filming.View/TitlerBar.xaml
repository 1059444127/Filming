<UserControl x:Class="UIH.Mcsf.Filming.View.TitlerBar"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:converters="clr-namespace:UIH.Mcsf.Filming.Converters;assembly=UIH.Mcsf.Filming.Converters">
    <UserControl.Resources>
        <converters:ElementIndexConverter x:Key="ElementIndexConverter"></converters:ElementIndexConverter>
    </UserControl.Resources>
    <TextBlock HorizontalAlignment="Right">
        <TextBlock.Text>
            <MultiBinding Converter="{StaticResource ElementIndexConverter}">
                <Binding Path="PageNO"></Binding>
                <Binding Path="PageCount"></Binding>
            </MultiBinding>
        </TextBlock.Text>
        </TextBlock>
</UserControl>