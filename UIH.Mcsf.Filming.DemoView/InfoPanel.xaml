<UserControl x:Class="UIH.Mcsf.Filming.DemoView.InfoPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
        <ScrollBar Maximum="{Binding BoardCount}" Value="{Binding BoardNo}" Minimum="1" />
        <StackPanel>
            <TextBlock Text="{Binding BoardNo}" />
            <TextBlock Text="{Binding BoardCount}" />
        </StackPanel>
    </StackPanel>
</UserControl>