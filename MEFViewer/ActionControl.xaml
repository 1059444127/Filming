<UserControl x:Class="MEFViewer.ActionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Content="Pointer" Command="{Binding PointerCommand}" HorizontalAlignment="Center"
                VerticalAlignment="Center" />
        <Button Grid.Column="1" Content="Pan" Command="{Binding PanCommand}" HorizontalAlignment="Center"
                VerticalAlignment="Center" />
    </Grid>
</UserControl>